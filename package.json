{
    "name": "angular2-rollup",
    "version": "0.0.1",
    "description": "",
    "scripts": {
        "clean-roll": "rimraf dist",
        "ngc": "ngc && cp -R app/* dist",
        "tsc": "tsc -p tsconfig.aot.json",
        "rollup": "rollup -f iife -c",
        "es5": "tsc --target es5 --allowJs dist/bundle.es2015.js --out dist/bundle.js",
        "minify": "uglifyjs dist/bundle.js --screw-ie8 --compress --mangle --output dist/bundle.min.js",
        "build": "npm run clean-roll && npm run ngc && npm run tsc && npm run rollup && npm run es5 && npm run minify",
        "watch": "concurrently \"tsc -w\" \"lite-server\"",
        "start": "npm run clean-roll && tsc && npm run watch"
    },
    "author": "Jared Helgeson <jared@codeninja.guru>",
    "license": "MIT",
    "devDependencies": {
        "@angular/compiler-cli": "^2.4.3",
        "@angular/platform-server": "^2.4.3",
        "@types/core-js": "^0.9.35",
        "concurrently": "^3.1.0",
        "connect-history-api-fallback": "^1.3.0",
        "core-js": "^2.4.1",
        "cssnano": "^3.10.0",
        "lite-server": "^2.2.2",
        "npm-run-all": "^4.0.0",
        "postcss-cssnext": "^2.9.0",
        "postcss-nested": "^1.0.0",
        "postcss-simple-vars": "^3.0.0",
        "rimraf": "^2.5.4",
        "rollup": "^0.41.1",
        "rollup-plugin-angular": "^0.4.3",
        "rollup-plugin-livereload": "^0.4.0",
        "rollup-plugin-node-resolve": "^2.0.0",
        "rollup-plugin-postcss": "^0.2.0",
        "rollup-plugin-serve": "^0.1.0",
        "rollup-plugin-typescript": "^0.8.1",
        "typescript": "^2.1.5",
        "uglifyjs": "^2.4.10"
    },
    "dependencies": {
        "@angular/common": "^2.4.3",
        "@angular/compiler": "^2.4.3",
        "@angular/core": "^2.4.3",
        "@angular/platform-browser": "^2.4.3",
        "@angular/platform-browser-dynamic": "^2.4.3",
        "es6-shim": "^0.35.2",
        "reflect-metadata": "^0.1.9",
        "rxjs": "^5.0.3",
        "rxjs-es": "^5.0.0-beta.12",
        "systemjs": "^0.19.41",
        "zone.js": "^0.7.4"
    }
}
