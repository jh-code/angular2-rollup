{
  "name": "angular2-rollup",
  "version": "0.0.1",
  "description": "",
  "scripts": {
    "clean": "rimraf dist build",
    "ngc:prod": "ngc -p tsconfig.aot.json",
    "ngc:dev": "tsc -p tsconfig.json",
    "rollup:prod": "rollup -c",
    "rollup:dev": "rollup -c rollup.dev.config.js -w",
    "build": "npm run clean && npm run ngc:prod && npm run rollup:prod",
    "serve": "lite-server",
    "compass": "compass watch",
    "start": "npm run clean && npm run ngc:dev && npm-run-all --parallel compass rollup:dev serve"
  },
  "author": "Jared Helgeson <jared@codeninja.guru>",
  "license": "MIT",
  "devDependencies": {
    "@angular/compiler-cli": "^2.4.3",
    "@angular/platform-server": "^2.4.3",
    "@types/core-js": "^0.9.35",
    "connect-history-api-fallback": "^1.3.0",
    "core-js": "^2.4.1",
    "cssnano": "^3.10.0",
    "lite-server": "^2.2.2",
    "node-sass": "^4.2.0",
    "npm-run-all": "^4.0.0",
    "rimraf": "^2.5.4",
    "rollup": "^0.41.1",
    "rollup-plugin-angular": "^0.4.3",
    "rollup-plugin-commonjs": "^7.0.0",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-postcss": "^0.2.0",
    "rollup-plugin-typescript": "^0.8.1",
    "rollup-plugin-uglify": "^1.0.1",
    "rollup-watch": "^3.2.2",
    "typescript": "^2.1.5"
  },
  "dependencies": {
    "@angular/common": "^2.4.3",
    "@angular/compiler": "^2.4.3",
    "@angular/core": "^2.4.3",
    "@angular/platform-browser": "^2.4.3",
    "@angular/platform-browser-dynamic": "^2.4.3",
    "es6-shim": "^0.35.2",
    "reflect-metadata": "^0.1.9",
    "rxjs": "^5.0.3",
    "rxjs-es": "^5.0.0-beta.12",
    "systemjs": "^0.19.41",
    "zone.js": "^0.7.5"
  }
}
